<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Billing Details</title>
    <link rel="stylesheet" href="/stylesheets/billingDetails.css">
    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel = "icon" href ="/images/logo1circle.png" type = "image/x-icon"> 
    <script>
        function displayDate(){
            var cidate = new Date($('#checkin').text());
            var codate = new Date($('#checkout').text());
            var months = [ "January", "February", "March", "April", "May", "June",
                "July", "August", "September", "October", "November", "December"];

            var cimonth = months[cidate.getMonth()];
            var ciyear = cidate.getFullYear();
            var ciday = cidate.getDate();

            var comonth = months[codate.getMonth()];
            var coyear = codate.getFullYear();
            var coday = codate.getDate();

            if (ciday < 10){
                ciday = "0" + ciday;
            }
            if (coday < 10){
                coday = "0" + coday;
            }

            var checkinstring = " " + cimonth + " " + ciday + ", " + ciyear + " ";
            var checkoutstring = " " + comonth + " " + coday + ", " + coyear + " ";

            $("#checkin").text(checkinstring);
            $("#checkout").text(checkoutstring);
        }

        $(document).ready(function(){
            displayDate();
        });
    </script>
</head>
<body>
    {{> (lookup . 'whichheader') }}
    <div class="container pt-4" id="title">
        Booking Confirmation
    </div>
    <div class="container mb-5">
        <div class="row mt-4" id="container">
            <div class="container py-3" id="container">
                <div class="row mx-1 my-1 bgcolor">
                    <div class="container mt-2" id="billing">
                        <h1 class="py-2 mt-2 mb-4">Billing Details</h1>
                        <div class="row pt-4">
                            <div class="col-md-5 col-12 pb-3">
                                <img class="img-fluid" src="{{source}}">
                            </div>
                            <div class ="col-md-7 col-12 pb-3" id="details">
                                <div class="row justify-content-center" id="type">
                                    {{data.roomtype}}
                                </div>
                                <hr>
                                <div class="row justify-content-center">
                                    <div class="row justify-content-center pb-4" id="date">
                                        <span id="checkin" class="mr-2">{{data.checkInDate}}</span> - <span id="checkout" class="ml-2">{{data.checkOutDate}}</span>
                                    </div>
                                <div class="col-10">
                                    <div class="row pb-2">
                                        <div class="col-md-6 col-12 first">
                                            Number of Rooms:
                                        </div> 
                                        <div class="col-md-6 col-12 second">
                                            {{data.rooms}}
                                        </div>
                                    </div>
                                    <div class="row pb-2">
                                        <div class="col-md-6 col-12 first">
                                            Number of Adults:
                                        </div> 
                                        <div class="col-md-6 col-12 second">
                                            {{data.adults}}
                                        </div>
                                    </div>
                                    <div class="row pb-4">
                                        <div class="col-md-6 col-12 first">
                                            Number of Children:
                                        </div> 
                                        <div class="col-md-6 col-12 second">
                                            {{data.kids}}
                                        </div>
                                    </div>
                                    <div class="row py-2 my-2" id="comments">
                                        <div class="col-12">
                                            <div class="row justify-content-center m-2"><b>Additional Comments/Requests</b></div>
                                            <div class="row justify-content-center pb-2 mx-1">
                                                {{#if data.requests}}
                                                    {{data.requests}}
                                                {{else}}
                                                    None
                                                {{/if}}
                                            </div>
                                        
                                        </div>
                                    </div>
                                </div>  
                                <!-- <hr> -->
                            </div> 
                            <hr>
                            <div class="row">
                                <div class="col-md-6 col-12 payfirst">
                                    Total Payment
                                </div>
                                <div class="col-md-6 col-12 paysecond">
                                    PHP {{TOTAL}}
                                </div>
                                
                            </div>
                            </div>
                        </div>
                        <div class="row pt-5">
                            <div class="col-12 text-align-center pb-3 text-center">
                                <a class="btn" type="button" href="/">Back to Home Page</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{> (lookup . 'whichfooter') }}
    <script src="/javascripts/Home.js"></script>
</body>
</html>